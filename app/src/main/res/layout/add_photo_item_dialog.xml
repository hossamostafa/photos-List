<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="6dp"
            android:layout_toStartOf="@id/close_dialog"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/profile_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="add Photo"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#279692"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/close_dialog"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:padding="8dp"
            android:src="@drawable/ic_baseline_close_24"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:id="@+id/photographer_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:layout_marginVertical="4dp"
            android:hint="photographer name"
            android:drawableLeft="@drawable/ic_baseline_person_outline_24"
            android:drawablePadding="6dp"/>
        <EditText
            android:id="@+id/location_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:layout_marginVertical="4dp"
            android:hint="location"
            android:drawableLeft="@drawable/ic_baseline_location_on_24"
            android:drawablePadding="6dp"/>
        <TextView
            android:id="@+id/load_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:layout_marginVertical="4dp"
            android:text="load photo"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_outline_add_photo_alternate_24"
            android:drawablePadding="6dp"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/add_photo_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="8dp"
            android:layout_margin="18dp"
            android:text="add photo"
            android:textSize="18dp"
            android:textColor="#279692"
            android:textStyle="bold"/>
    </FrameLayout>
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/photo"
        android:layout_width="match_parent"
        android:layout_height="512dp"
        android:scaleType="fitCenter"
        android:layout_gravity="center_horizontal"
        android:adjustViewBounds="true"
        android:padding="4dp"
        android:src="@mipmap/ic_launcher_round"
        android:theme="@style/roundedImageView"
        android:transitionName="img" />
</LinearLayout>
</ScrollView>